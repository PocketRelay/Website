---
import "../styles/global.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/900.css";

export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Pocket Relay" />
		<meta
			property="og:description"
			content="Mass Effect 3 private server emulator"
		/>
		<meta property="og:url" content="https://pocket-relay.pages.dev/" />
		<meta property="og:image" content="/logo.svg" />
		<meta name="author" content="Jacobtread" />
		<meta
			name="description"
			content="Mass Effect 3 private server emulator"
		/>
		<meta name="keywords" content="me3,masseffect3,privateserver" />
		<meta name="theme-color" content="#7ed380" />
		<title>{title ?? "Document"} | Pocket Relay</title>
	</head>
	<body>
		<slot />
	</body>
</html>
