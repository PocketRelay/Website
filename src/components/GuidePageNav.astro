---
import { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;
---

<aside class="sidebar">
  <p>On this page</p>
  <nav>
    <ul class="headings">
      {
        headings.map((heading) => (
          <li class="headings__item">
            <a href={`#${heading.slug}`} class="heading">
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    padding: 1rem;
    height: 100%;
    max-width: 16rem;
    width: 100%;
    overflow-y: auto;
  }

  .headings {
  }

  .headings__item {
  }

  .heading {
  }
</style>
